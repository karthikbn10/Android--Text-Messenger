<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context="com.apppartner.androidprogrammertest.LoginActivity">

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/login_button"
        android:src="@drawable/btn_login"
        android:scaleType="fitXY"
        android:background="@drawable/button_selector"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="100dp"
        android:onClick="onLoginButtonClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/password_TextView"
        android:layout_alignStart="@+id/password_TextView" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/username_TextView"
        android:inputType="text"
        android:hint="  Username"
        android:layout_gravity="center"
        android:background="@drawable/graphic_input"
        android:textSize="11pt"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/password_TextView"
        android:layout_alignLeft="@+id/password_TextView"
        android:layout_alignStart="@+id/password_TextView" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/password_TextView"
        android:inputType="textPassword"
        android:hint="  Password"
        android:layout_gravity="center_horizontal|top"
        android:textSize="11pt"
        android:background="@drawable/graphic_input"
        android:layout_above="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="138dp" />




</RelativeLayout>
