<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_animation"

    tools:context="com.apppartner.androidprogrammertest.AnimationActivity">




    <FrameLayout
        android:id="@+id/inner_framelayout"
        android:layout_width="wrap_content"
        android:layout_height="372dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="150dp"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_cell_animation_test" >




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appartner_icon"
        android:src="@drawable/ic_apppartner"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_weight="1" />

    </FrameLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="rotateClick"
        android:id="@+id/rotatebutton"
        android:src="@drawable/btn_rotate"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="465dp"
        android:background="@drawable/button_selector"
        android:layout_weight="1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/translatebutton"
        android:src="@drawable/btn_translate"
        android:background="@drawable/button_selector"
        android:onClick="translateClick"
        android:layout_marginLeft="225dp"
        android:layout_marginTop="465dp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fadebutton"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/btn_fade"
        android:background="@drawable/button_selector"
        android:layout_marginBottom="20dp"/>
</FrameLayout>
